[
  {
    label = "suspend";
    action = "systemctl suspend";
    text = "Sleep";
    keybind = "u";
  }
  {
    label = "shutdown";
    action = "systemctl poweroff";
    text = "Shutdown";
    keybind = "s";
  }
  {
    label = "reboot";
    action = "systemctl reboot";
    text = "Reboot";
    keybind = "r";
  }
  {
    label = "lock";
    action = "$LOCK";
    text = "Lock";
    keybind = "l";
  }
]
